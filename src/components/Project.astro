---
export interface Props {
  title: string;
  repoUrl: string;
  description: string;
  demoUrl?: string;
}

const { title, repoUrl, demoUrl, description } = Astro.props as Props;
---

<div class="text-black dark:text-slate-100 border-slate-800 dark:border-slate-100 border-2 rounded-md p-3 w-96 h-36">
  <h1>{title}</h1>
  <div class="pt-1 pb-2">
    <a href={repoUrl} target="_blank"
      class="border-b-2 border-solid border-slate-400 hover:border-slate-800 dark:hover:border-slate-200">code</a>
    { demoUrl && <nobr> | </nobr><a href={demoUrl} target="_blank"
      class="border-b-2 border-solid border-slate-400 hover:border-slate-800 dark:hover:border-slate-200">demo</a> }
  </div>
  <p>{description}</p>
</div>
